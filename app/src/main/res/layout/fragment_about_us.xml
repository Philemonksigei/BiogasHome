<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_us_frag">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_abt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_sides"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/abt_h_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Who we are"
                android:textColor="#9C27B0"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/abt_body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/who_we_are"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/abt_h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textColor="#9C27B0"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/abt_b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>