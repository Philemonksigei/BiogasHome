<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pictorials_frag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_sides"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pics_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pictorial-Steps"
                android:textColor="#09E812"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_welcome_background" />

            <TextView
                android:id="@+id/coming_soon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We apologies....Pictorials coming soon!"
                android:textColor="#E91E63" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>