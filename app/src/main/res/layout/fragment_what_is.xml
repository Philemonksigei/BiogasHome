<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".what_isFrag">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/linearlayout_what_is_bio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <TextView
            android:id="@+id/biogasInfo_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="What is Biogas?"
            android:textColor="#05F10E"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollview_bio_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FBFBFB"
            android:fillViewport="false">


            <TextView
                android:id="@+id/bioInfo_Explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill|fill_horizontal"
                android:text="@string/biogas_explnations"
                android:textSize="16sp" />

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>